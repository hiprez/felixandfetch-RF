  			<div class="row">
          <div class="product-page--thumb-slider horizontal{% if product.images.size < 5 %} no-arrows{% endif %}">
    				<ul id="product-thumbnails" class="product-thumbnails-wrapper slides">
    				{% for image in product.images %}
    					<li>
    						<a href="{{ image | product_img_url: '1800x' }}" title="{{ image.alt | escape }}" class="image-swap" data-image-id="{{ image.id }}"
    									{% if image.variants != empty %} data-variant="{{ image.variants[0].id }}"{% endif %}>
    								{% capture props %}
    									data-zoom-img="{{ image | product_img_url: '1800x' }}"
                      style="max-width: {{ image.width }}px"
    								{% endcapture %}
                    {% assign responsive_img_url = image | img_url: '1000x1000' | replace: '_1000x1000.', '_{width}x.' %}
                    <img
                        class=""
                        src="{{ image.src | img_url: '160x160', crop: 'center' }}"
                        data-src="{{ responsive_img_url }}"
                        data-sizes="auto"
                        data-aspectratio="{{ responsive_img_url.aspect_ratio }}"
                        alt="{{ image.alt | escape }}"
                        {{ props }}
                    />
                </a>
    					</li>
    				{% endfor %}
    				</ul>
          </div>
  			</div>
  			{% endif %}
      {% endif %}

  	</div>

  	<div id="mobile-product-images">
