<script>
  jQuery(document).ready(function($){

    $(document).on('click', ".purchase-tab", function () {
      if ($(this).hasClass('purchase-tab--autodeliver')) {
          $('.savings-percentage1').show();
      } else {
          $('.savings-percentage1').hide();
      }
  });

  $(document).on('click', ".quantity-key1", function () {
      var quantityBox1 = $(this).closest('.quantity-box1');
      quantityBox1.find('.quantity-wrapper1').toggleClass('is-open');
  });
  $(document).on('click', ".quantity-switcher1", function () {
      var quantityBox1 = $(this).closest('.quantity-box1'),
          selectedData = $(this).find('.quantity-dropdown-tab--data').html();
      quantityBox1.find('.quantity-key--data1').html(selectedData);
      quantityBox1.find('.quantity-wrapper1').removeClass('is-open');
  });

  $(document).on('click', ".quantity-select-option", function () {
      var data_freq = $(this).attr('data-frequency');
      $('select[name="properties[shipping_interval_frequency]"]').find('option').removeAttr('selected', true);
      $('select[name="properties[shipping_interval_frequency]"]').find('option[value="' + data_freq + '"]').attr("selected", true);
  });

  $('[name="purchase_type"]').on('change',function(){
    if($(this).val() == 'onetime'){
      $('.price .save').hide();
      $('.list_price').hide();
    }else{
      $('.price .save').show();
      $('.list_price').show();
    }

  })
  });</script>


